    <script>


        const cust = document.getElementById("cus");
        const ite = document.getElementById("it");
        const asset = document.getElementById("as");
        const ven = document.getElementById("ve");

        cust.addEventListener("click", function () {
            document.getElementById("cuscli").style.visibility = "visible";
            document.getElementById("itemcli").style.visibility = "hidden";
            document.getElementById("vendorcli").style.visibility = "hidden";
            document.getElementById("assetcli").style.visibility = "hidden";

        });
        ven.addEventListener("click", function () {
            document.getElementById("cuscli").style.visibility = "hidden";
            document.getElementById("itemcli").style.visibility = "hidden";
            document.getElementById("vendorcli").style.visibility = "visible";
            document.getElementById("assetcli").style.visibility = "hidden";

        });

        ite.addEventListener("click", function () {
            document.getElementById("cuscli").style.visibility = "hidden";
            document.getElementById("itemcli").style.visibility = "visible";
            document.getElementById("vendorcli").style.visibility = "hidden";
            document.getElementById("assetcli").style.visibility = "hidden";
        });

        asset.addEventListener("click", function () {
            document.getElementById("cuscli").style.visibility = "hidden";
            document.getElementById("itemcli").style.visibility = "hidden";
            document.getElementById("vendorcli").style.visibility = "hidden";
            document.getElementById("assetcli").style.visibility = "visible";
